@model IEnumerable<TakeTwo.Models.User>

@{
    ViewBag.Title = "ViewAllUsers";
}

<h2>Theater Company Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsSuspended)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.IsApproved)*@
                @if (item.IsSuspended)
                {
                    @Html.ActionLink("Unsuspend User", "UnsuspendUser", "Admin", new { id = item.Id }, new { @class = "btn btn-info btn-xs" })
                }
                else
                {
                    @Html.ActionLink("Suspend User", "SuspendUser", "Admin", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                }
            </td>

            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id })
            </td>
        </tr>
    }

</table>
